#include <iostream>

int main() {
    int V; // Об'єм акваріума
    int N; // Допустима кількість золотих рибок

    // Зчитуємо об'єм акваріума
    std::cout << "Введіть об'єм акваріума (між 20 та 500 літрами): ";
    std::cin >> V;

    // Розраховуємо допустиму кількість золотих рибок
    N = V / 3;

    // Виводимо результат
    std::cout << "Допустима кількість золотих рибок: " << N << std::endl;

    return 0;
}
